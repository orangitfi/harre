{
  "extends": [
    "config:base",
    ":rebaseStalePrs",
    ":automergePatch",
    ":masterIssue",
    ":pinDependencies",
    ":pinDevDependencies"
  ],
  "assignAutomerge": true,
  "automergeType": "branch",
  "lockFileMaintenance": {
